/* OverLoad */
input,
select,
textarea
  border-radius 0 !important

.form-control
  &:focus
    border-color #E9C966
    outline 0
    box-shadow inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(233, 187, 102, .6)

.btn
  position relative
  display inline-block
  border-radius 0
  font-weight 300
  transition all .3s
  &:hover
    color #fff
  &:after
    content ''
    position absolute
    z-index -1
    transition all .3s


  &-border
    background none
    color #222
    border-color #222
    z-index 1
    
    &:after
      width 100%
      height 0
      bottom 0
      left 0
      background #222

    &:hover:after
    &:active:after
      height 100%

  &-big
    font-size 1.4rem
    padding 1rem 3rem

  &-white
    color #fff
    border-color #fff
    &:after
      width 100%
      height 0
      bottom 0
      left 0
      background #222



/* General */
 
