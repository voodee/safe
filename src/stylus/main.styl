.triangle
  min-height 480px
  position relative
  top -70px
  margin 0 auto
  background #fff
  
  &:before
    //border-color #2D3E50 transparent transparent #2D3E50
    border-color transparent #fff #fff transparent
    border-style solid
    border-width 550px
    content ''
    height 0
    left 0
    position absolute
    top 0
    width 0
    z-index 2
    
  &-canvas
    position absolute
    overflow hidden
    top 0
    left 0
    height 1100px
    width 1100px
    backface-visibility hidden
    background-color #c44741
    
    &-inner
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      
      canvas 
        opacity .3
        width 100%
        height 100%
        position absolute
        top 0
        left 0

  
.shape
  &-section 
    position relative
    overflow hidden
    top -110px
    margin 0 auto -110px auto
    
  &-cover 
    position relative
    top 0
    margin-bottom 80px
    
  &-inner
    width 100%
    height 1800px
    position relative
    max-width 1600px
    margin 0 auto
    
    &:before
    &:after  
      position absolute
      display block
      content ''
      width 1800px
      height 1800px
      left -765px
      top 31rem
      right 0;
      bottom 0
      transform rotate(43deg)
      
    &:after  
      top 1295px
      left 25%
      transform rotate(45deg)

  &-color
    &-darkblue
      &:before
        background #172332
      &:after
        background #f9bb3d
        
    &-step
      &:before
        background red
      &:after
        background blue
        
    &-price
      &:before
        background #c44741
      &:after
        background rgb(246, 248, 248)
        
  &-index
    &-1
      z-index 1
    &-2
      z-index 2
    &-3
      z-index 3
    &-4
      z-index 4
    &-5
      z-index 5
    &-6
      z-index 6



